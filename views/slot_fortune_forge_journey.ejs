        <!-- GSAP CDN -->
        <script src="https://cdn.jsdelivr.net/npm/gsap@3/dist/gsap.min.js"></script>

        <!-- Load game code -->
        <% if (!isProduction) { %>
        <script type="module" src="/src/slot_fortune_forge_journey.js"></script>
        <% } else { %>
        <script
          type="module"
          src="/assets/slot_fortune_forge_journey.js"
